<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".fragments.GiveTextFragment">

    <LinearLayout
        android:id="@+id/ll_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/purple_200"
            android:id="@+id/tv_prompt0"
            android:layout_margin="4sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="Give"
            />

        <TextView
            android:id="@+id/tv_prompt1"
            android:textColor="#FF5722"
            android:layout_margin="4sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="Your"
            />

        <TextView
            android:layout_margin="4sp"
            android:textColor="@color/teal_700"
            android:id="@+id/tv_prompt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="Friend"
            />

        <TextView
            android:layout_margin="4sp"
            android:id="@+id/tv_prompt3"
            android:textColor="#9C27B0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="a"
            />


        <TextView
            android:layout_margin="4sp"
            android:textColor="#2196F3"
            android:id="@+id/tv_prompt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="Word"
            />

        <TextView
            android:layout_margin="4sp"
            android:textColor="#FF9800"
            android:id="@+id/tv_prompt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="to"
            />

        <TextView
            android:layout_margin="4sp"
            android:textColor="#9C27B0"
            android:id="@+id/tv_prompt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="Guess!!"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/et_input_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btn_start_game"
        android:layout_width="wrap_content"
        android:text="@string/btn_start_game_text"
        android:layout_height="wrap_content"/>

</LinearLayout>